{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2017"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "outDir": "./dist",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": [
    "./type-overrides.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
